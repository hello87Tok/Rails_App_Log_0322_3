<div class="" style="background-image: url(<%= @article.image %>);">
  <div class="">
    <span><%= image_tag '' %></span>
    <ul class="">
      <% if user_signed_in? && current_user.id == @article.user_id %>
        <li>
          <%= link_to 'Edit', edit_article_path(@article.id), method: :get %>
        </li>
        <li>
          <%= link_to 'Delete', article_path(@article.id), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to 'Twitter', "http://twitter.com/share?url=#{request.url}&text=#{@article.description}&hashtags=wiki_log", title: 'Twitter', target: '_blank' %>
  <%#= link_to 'Twitter', "http://twitter.com/share?url=https://twitter.com/home&text=#{@article.description}&hashtags=wiki_log", title: 'Twitter', target: '_blank' %>

  <%= simple_format(@article.title) %>
  <%= simple_format(@article.title) %>

  <% if @article.categories.any? %>
    <p>Categories: <%= render @article.categories %></p>
  <% end %>

  <span class="">
    <a href="/users/<%= @article.user.id %>">
      <span><%= @article.user.nickname %></span>
    </a>
  </span>
</div>
<div class="">
  <% if current_user %>
    <%= form_with(model: [@article, @comment], local: true) do |form| %>
      <%= form.text_area :text, placeholder: "comment", rows: "2" %>
      <%= form.submit "SEND" %>
    <% end %>
  <% else %>
    <strong><p><%= link_to "Login Here", new_user_session_path, class: 'post' %></p></strong>
  <% end %>
  <div class="">
    <h4>Comments</h4>
    <% if @comments %>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>ï¼š</strong>
          <%= comment.text %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>