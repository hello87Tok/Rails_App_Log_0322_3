<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">
      <%= image_pack_tag 'icon.png' %>
    </a>

    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>

  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">

      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          Categories
        </a>
        <div class="navbar-dropdown">
          <% Category.all.each do |category| %>
          <a class="navbar-item">
            <%= link_to category.name, category_path(category) %>
          </a>
          <% end %>
          <hr class="navbar-divider">
          <% if user_signed_in? && current_user.admin? %>
          <a class="navbar-item"><%= link_to "New Category(admin)", new_category_path %></a>
          <% end %>
        </div>
      </div>

      <% if user_signed_in? %>
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link">
          More
        </a>

        <div class="navbar-dropdown">
          <a class="navbar-item" href='/users/<%= current_user.id %>'>
            <%= current_user.nickname %>'s Profile
          </a>
          <a class="navbar-item" href='/users/edit' data-method="get">
            Edit Profile
          </a>

          <hr class="navbar-divider">
          <a class="navbar-item">
            Report an issue
          </a>
        </div>
      </div>
      <% end %>
    </div>

    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons ">

          <% if user_signed_in? %>
          <a class="button is-light" href='/articles/new'>
            New Article
          </a>

          <a class="button is-light" href='/users/sign_out' data-method="delete">
            logout
          </a>

          <% else %>
          <a class="button is-light" href='/users/sign_in'>
            Login
          </a>

          <a class="button is-light" href='/users/sign_up'>
            Sign_up
          </a>
          <% end %>

        </div>

      </div>
    </div>
  </div>
</nav>